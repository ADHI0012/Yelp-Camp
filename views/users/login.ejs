<% layout('layouts/boilerplate.ejs') %>

<h1>LOG IN</h1>

<form action="/login" method="POST" class="needs-validation" novalidate>
  <div class="mb-3">
    <label class="form-label" for="username">Username</label>
    <input
      class="form-control"
      type="text"
      id="username"
      name="username"
      required
    />
  </div>

  <div class="mb-3">
    <label class="form-label" for="password">Passoword</label>
    <input
      class="form-control"
      type="password"
      id="password"
      name="password"
      required
    />
  </div>
  <button class="btn btn-success">LOGIN</button>
</form>
